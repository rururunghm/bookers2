
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  
        <h2>User info</h2>
        
       
        <% if @book.image.attached? %>
          <%= image_tag book.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image', size: "100x100" %>
        <% end %>

          <table class="table">
            <tbody>
              <tr>
              <th>name</th>
              <th></th>
              </tr>
              <tr>
              <th>introduction</th>
              <th></th>
              </tr>
            </tbody>
          </table>
          
          
          <div class="row">
              
          <a class="btn btn-outline-secondary btn-block">
              <i class="fas fa-user-cog" aria-hidden="true"></i>
              </a>
          
          </div>
       

        <h1>New Book</h1>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
	
        <h4>Opinion</h4>
          <%= f.text_area :body %>
	
        
          <%= f.submit 'Create Book' %>
    
        <% end %>
        </div>
    
    
    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <% @books.each do |book| %>
       
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          
          <tbody>
            <tr>
              <td><% if @book.image.attached? %>
                    <%= image_tag book.image, size: "80x80" %>
                  <% else %>
                    <%= image_tag 'default-image', size: "80x80" %>
                  <% end %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
            </tr>
          </tbody>
        </table>
         <% end %>
        
    </div>
    
    
    
    </div>
    </div>