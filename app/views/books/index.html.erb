<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  
        <h2>User info</h2>
        <%= image_tag 'default-image' %>

          <table class="table">
            <tbody>
              <tr>
              <th>name</th>
              <th></th>
              </tr>
              <tr>
              <th>introduction</th>
              <th></th>
              </tr>
            </tbody>
          </table>

        <div class="row">
          <a class="btn btn-outline-secondary btn-block">
            <i class="fas fa-user-cog" aria-hidden="true">
              
            </i>
          </a>
        </div>



        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: @book, url: '/books', method: :post do |f| %>

  
  
          <div class="group">
            <label for ="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
    
          <div class="group">
            <label for ="book_body">Opinion</label>
            <textarea class="form-control book_body" type="text" name="book[body]" id="book_body"></textarea>
          </div>
  
          <div class="group">
            <input type="submit" name="commit" value="Create Book" class="actions btn btn-sm btn-success" date-disable-with="Create Book">
          </div>
        <% end %>
      
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class ="table">
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td><%= link_to "Edit", edit_book_path(current_user.id) %></td>
                    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                    
                </tr>
                    
            </tbody>
        </table>
    </div>
    
    
    </div>
