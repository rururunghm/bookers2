
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  
        <h2>User info</h2>
        <%= image_tag 'default-image' %>

          <table class="table">
            <tbody>
              <tr>
              <th>name</th>
              <th></th>
              </tr>
              <tr>
              <th>introduction</th>
              <th></th>
              </tr>
            </tbody>
          </table>
          

        <div class="row">
          <a class="btn btn-outline-secondary btn-block">
            <i class="fas fa-user-cog" aria-hidden="true">
              
            </i>
          </a>
        </div>



        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  
        <h4>Title</h4>
          <%= f.text_field :title %>
	
        <h4>Opinion</h4>
          <%= f.text_area :body %>
	
          <%= f.submit 'Create Book' %>
    
        <% end %>
      </div>
        
      
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
           <tr>
            <td>
              <% if @book.image.attached? %>
                <%= image_tag book.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'default-image', size: "100x100" %>
              <% end %>
            </td>
            <td></td>
            <td>  <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id) %>
                  <% end %></td>
                  
            <td>  <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete %>
                  <% end %>
            </td>
           </tr>
           </tbody>
         </table>
      </div>
      
      
    </div>